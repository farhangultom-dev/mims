<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.pemakaian.ap2t.DetailMaterialPemakaianUlpAp2t">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="84dp"
            android:background="@drawable/dashboard"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="29dp"
            android:background="#00FFFFFF"
            android:src="@drawable/ic_baseline_arrow_back_ios_24"
            app:layout_constraintBottom_toBottomOf="@+id/textView3"
            app:layout_constraintEnd_toStartOf="@id/textView3"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toStartOf="@+id/header"
            app:layout_constraintTop_toTopOf="@+id/textView3" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="80dp"
            android:fontFamily="@font/montserrat_reguler"
            android:text="Detail Material\n(AP2T)"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/header"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btn_back"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_no_reservasi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="25dp"
            android:background="#F7F8FA"
            app:cardCornerRadius="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/header">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:id="@+id/view"
                    android:layout_width="10dp"
                    android:layout_height="0dp"
                    android:background="#26ACE2"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/lbl_no_reservasi"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/montserrat_reguler"
                    android:text="No. Reservasi"
                    android:textSize="10sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/view"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/txt_no_reservasi"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/montserrat_semibold"
                    android:text="10011"
                    android:textColor="#3F3D56"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/lbl_no_reservasi"
                    app:layout_constraintStart_toStartOf="@+id/lbl_no_reservasi"
                    app:layout_constraintTop_toBottomOf="@id/lbl_no_reservasi" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <!--    <TextView-->
        <!--        android:id="@+id/lbl_input_pemakaian"-->
        <!--        android:layout_width="wrap_content"-->
        <!--        android:layout_height="wrap_content"-->
        <!--        android:layout_marginTop="21dp"-->
        <!--        android:fontFamily="@font/montserrat_reguler"-->
        <!--        android:text="Input Pemakaian"-->
        <!--        android:textColor="#3F3D56"-->
        <!--        android:textSize="14sp"-->
        <!--        android:textStyle="bold"-->
        <!--        app:layout_constraintStart_toStartOf="@+id/cv_no_reservasi"-->
        <!--        app:layout_constraintTop_toBottomOf="@+id/cv_no_reservasi" />-->

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_pemakaian"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_btn1"
            android:fontFamily="@font/montserrat_medium"
            android:text="Input Pemakaian"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@id/view3"
            app:layout_constraintEnd_toStartOf="@id/btn_sap"
            app:layout_constraintStart_toStartOf="@id/src_nomorMaterial"
            app:layout_constraintTop_toBottomOf="@id/src_nomorMaterial" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_sap"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_marginStart="5dp"
            android:background="@drawable/btn_sap"
            android:fontFamily="@font/montserrat_medium"
            android:text="SAP"
            android:textAllCaps="false"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@id/btn_pemakaian"
            app:layout_constraintEnd_toStartOf="@id/btn_pelanggan"
            app:layout_constraintStart_toEndOf="@id/btn_pemakaian"
            app:layout_constraintTop_toTopOf="@id/btn_pemakaian" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_pelanggan"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:layout_marginStart="5dp"
            android:background="@drawable/bg_btn1"
            android:fontFamily="@font/montserrat_medium"
            android:text="Pelanggan"
            android:textAllCaps="false"
            android:textColor="@color/white"
            app:layout_constraintBottom_toTopOf="@id/view3"
            app:layout_constraintEnd_toEndOf="@+id/src_nomorMaterial"
            app:layout_constraintStart_toEndOf="@id/btn_sap"
            app:layout_constraintTop_toBottomOf="@id/src_nomorMaterial" />

        <TextView
            android:id="@+id/txt_nomorMaterial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="23dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/montserrat_reguler"
            android:text="No. Material"
            android:textColor="#3F3D56"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cv_no_reservasi" />

        <EditText
            android:id="@+id/src_nomorMaterial"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginStart="23dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/srchview"
            android:drawableEnd="@drawable/ic_search"
            android:fontFamily="@font/montserrat_reguler"
            android:hint="Search here"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_nomorMaterial" />

        <View
            android:id="@+id/view3"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="15dp"
            android:background="#B9B9B9"
            app:layout_constraintEnd_toEndOf="@id/btn_pelanggan"
            app:layout_constraintStart_toStartOf="@id/btn_pemakaian"
            app:layout_constraintTop_toBottomOf="@id/btn_sap" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_pemakaian_ulp"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_marginBottom="20dp"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@+id/txt_total_data"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view3"
            tools:listitem="@layout/item_data_detail_material_pemakaian_ulp_ap2t" />

        <TextView
            android:id="@+id/txt_total_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/montserrat_medium"
            android:text="total 0 data"
            android:textColor="#96979B"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/src_nomorMaterial" />

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view3" />

        <!--        <androidx.appcompat.widget.AppCompatButton-->
        <!--            android:id="@+id/btn_simpan"-->
        <!--            android:layout_width="0dp"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_marginStart="24dp"-->
        <!--            android:layout_marginEnd="24dp"-->
        <!--            android:layout_marginBottom="10dp"-->
