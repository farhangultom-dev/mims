<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.inspeksi_material.tim_inspeksi.TimInspeksiActivity">

    <ImageView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:background="@drawable/dashboard"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="29dp"
        android:background="#00FFFFFF"
        android:src="@drawable/ic_baseline_arrow_back_ios_24"
        app:layout_constraintBottom_toBottomOf="@+id/textView3"
        app:layout_constraintEnd_toStartOf="@id/textView3"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="@+id/header"
        app:layout_constraintTop_toTopOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="80dp"
        android:fontFamily="@font/montserrat_reguler"
            android:text="Inspeksi Material Retur Ex-Bongkar"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_back"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/lbl_tim_inspeksi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/montserrat_reguler"
                android:text="Tim Inspeksi Material Retur Ex-Bongkar"
                android:textColor="#3F3D56"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/lbl_no_inspeksi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/montserrat_reguler"
                android:text="No. Inspeksi"
                android:textColor="#3F3D56"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/lbl_tim_inspeksi"/>

            <EditText
                android:id="@+id/edt_no_inspeksi"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="25dp"
                android:background="@drawable/srchview"
                android:enabled="false"
                android:fontFamily="@font/montserrat_reguler"
                android:hint=""
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/lbl_no_inspeksi"
                app:layout_constraintTop_toBottomOf="@+id/lbl_no_inspeksi" />

            <TextView
                android:id="@+id/lbl_nip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NIP"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/montserrat_reguler"
                android:textColor="#3F3D56"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@id/lbl_no_inspeksi"
                app:layout_constraintTop_toBottomOf="@id/edt_no_inspeksi" />

            <AutoCompleteTextView
                android:id="@+id/edt_nip"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="25dp"
                android:background="@drawable/txt_input_layout"
                android:fontFamily="@font/montserrat_reguler"
                android:hint="Masukan NIP"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/lbl_no_inspeksi"
                app:layout_constraintTop_toBottomOf="@id/lbl_nip" />

            <TextView
                android:id="@+id/lbl_nama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/montserrat_reguler"
                android:textColor="#3F3D56"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@id/lbl_no_inspeksi"
                app:layout_constraintTop_toBottomOf="@id/edt_nip" />

            <AutoCompleteTextView
                android:id="@+id/edt_nama"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="25dp"
                android:background="@drawable/txt_input_layout"
                android:fontFamily="@font/montserrat_reguler"
                android:hint="Masukan Nama"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/lbl_no_inspeksi"
                app:layout_constraintTop_toBottomOf="@id/lbl_nama" />

            <TextView
                android:id="@+id/lbl_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/montserrat_reguler"
                android:textColor="#3F3D56"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@id/lbl_no_inspeksi"
                app:layout_constraintTop_toBottomOf="@id/edt_nama" />

            <AutoCompleteTextView
                android:id="@+id/edt_email"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="25dp"
                android:background="@drawable/txt_input_layout"
                android:fontFamily="@font/montserrat_reguler"
                android:hint="Masukkan Email"
                android:inputType="textEmailAddress"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/lbl_no_inspeksi"
                app:layout_constraintTop_toBottomOf="@id/lbl_email" />

            <TextView
                android:id="@+id/lbl_jabatan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jabatan"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/montserrat_reguler"
                android:textColor="#3F3D56"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@id/lbl_no_inspeksi"
                app:layout_constraintTop_toBottomOf="@id/edt_email" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tinp_pilih_jabatan"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="25dp"
                app:hintAnimationEnabled="true"
                app:layout_constraintEnd_toStartOf="@id/btn_add_anggota"
                app:layout_constraintStart_toStartOf="@id/lbl_email"
                app:layout_constraintTop_toBottomOf="@id/lbl_jabatan">

                <AutoCompleteTextView
                    android:id="@+id/dropdown_jabatan"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Pilih Jabatan"
                    android:background="@drawable/txt_input_layout"
                    android:fontFamily="@font/montserrat"
                    android:inputType="none" />

            </com.google.android.material.textfield.TextInputLayout>

            <ImageButton
                android:id="@+id/btn_add_anggota"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:src="@drawable/add_anggota"
                android:background="@drawable/txt_input_layout"
                app:layout_constraintEnd_toEndOf="@id/edt_email"
                app:layout_constraintTop_toTopOf="@id/tinp_pilih_jabatan"
                app:layout_constraintBottom_toBottomOf="@id/tinp_pilih_jabatan"/>

            <TextView
                android:id="@+id/lbl_daftar_list_sn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Daftar Tim Inspeksi"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/montserrat_reguler"
                android:textColor="#3F3D56"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@id/lbl_no_inspeksi"
                app:layout_constraintTop_toBottomOf="@id/tinp_pilih_jabatan" />

            <View
                android:id="@+id/view"
                android:layout_width="350dp"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"
                android:background="#D8D8D8"
                app:layout_constraintTop_toBottomOf="@id/lbl_daftar_list_sn"
                app:layout_constraintEnd_toEndOf="@id/btn_add_anggota"
                app:layout_constraintStart_toStartOf="@id/lbl_daftar_list_sn"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_tim_inspeksi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="18dp"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="@id/view"
                app:layout_constraintStart_toStartOf="@id/view"
                app:layout_constraintTop_toBottomOf="@id/view"
                tools:listitem="@layout/item_tim_inspeksi"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_kirim"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/br_btn"
                android:elevation="8dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/montserrat_reguler"
                android:text="Selesai"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/rv_tim_inspeksi"
                app:layout_constraintStart_toStartOf="@id/rv_tim_inspeksi"
                app:layout_constraintTop_toBottomOf="@id/rv_tim_inspeksi" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>