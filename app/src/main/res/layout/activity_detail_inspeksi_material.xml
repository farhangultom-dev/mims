<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.inspeksi_material.detail_inspeksi.DetailInspeksiMaterialActivity">

    <ImageView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:background="@drawable/dashboard"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="29dp"
        android:background="#00FFFFFF"
        android:src="@drawable/ic_baseline_arrow_back_ios_24"
        app:layout_constraintBottom_toBottomOf="@+id/textView3"
        app:layout_constraintEnd_toStartOf="@id/textView3"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="@+id/header"
        app:layout_constraintTop_toTopOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="80dp"
        android:fontFamily="@font/montserrat_reguler"
        android:text="Inspeksi Material Retur Ex-Bongkar"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_back"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/lbl_detail_inspeksi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/montserrat_reguler"
                android:text="Detail Inspeksi Material Retur Ex-Bongkar"
                android:textColor="#3F3D56"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/lbl_no_material"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/montserrat_reguler"
                android:text="No. Material"
                android:textColor="#3F3D56"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/lbl_detail_inspeksi"/>

            <EditText
                android:id="@+id/edt_no_material"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="25dp"
                android:background="@drawable/srchview"
                android:enabled="false"
                android:fontFamily="@font/montserrat_reguler"
                android:hint=""
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/lbl_no_material"
                app:layout_constraintTop_toBottomOf="@id/lbl_no_material" />

            <TextView
                android:id="@+id/lbl_nama_material"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Material"
                android:fontFamily="@font/montserrat_reguler"
                android:textColor="#3F3D56"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/lbl_no_material"
                app:layout_constraintTop_toBottomOf="@id/edt_no_material"/>

            <EditText
                android:id="@+id/edt_nama_material"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="25dp"
                android:background="@drawable/srchview"
                android:enabled="false"
                android:fontFamily="@font/montserrat_reguler"
                android:hint=""
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/lbl_nama_material"
                app:layout_constraintTop_toBottomOf="@id/lbl_nama_material" />

            <TextView
                android:id="@+id/lbl_qty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Qty"
                android:fontFamily="@font/montserrat_reguler"
                android:textColor="#3F3D56"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/lbl_nama_material"
                app:layout_constraintTop_toBottomOf="@id/edt_nama_material"/>

            <EditText
                android:id="@+id/edt_qty"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="25dp"
                android:background="@drawable/srchview"
                android:enabled="false"
                android:fontFamily="@font/montserrat_reguler"
                android:hint=""
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/lbl_qty"
                app:layout_constraintTop_toBottomOf="@id/lbl_qty" />

            <TextView
                android:id="@+id/lbl_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Unit"
                android:fontFamily="@font/montserrat_reguler"
                android:textColor="#3F3D56"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/lbl_qty"
                app:layout_constraintTop_toBottomOf="@id/edt_qty"/>

            <EditText
                android:id="@+id/edt_unit"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="25dp"
                android:background="@drawable/srchview"
                android:enabled="false"
                android:fontFamily="@font/montserrat_reguler"
                android:hint=""
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/lbl_unit"
                app:layout_constraintTop_toBottomOf="@id/lbl_unit" />

            <TextView
                android:id="@+id/lbl_serial_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Serial Number"
                android:fontFamily="@font/montserrat_reguler"
                android:textColor="#3F3D56"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/lbl_unit"
                app:layout_constraintTop_toBottomOf="@id/edt_unit"/>

            <EditText
                android:id="@+id/edt_serial_number"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="25dp"
                android:background="@drawable/srchview"
                android:enabled="false"
                android:fontFamily="@font/montserrat_reguler"
                android:hint=""
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/lbl_serial_number"
                app:layout_constraintTop_toBottomOf="@id/lbl_serial_number" />

            <TextView
                android:id="@+id/lbl_attb_limbah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ATTB/Limbah"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/montserrat_reguler"
                android:textColor="#3F3D56"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@id/lbl_serial_number"
                app:layout_constraintTop_toBottomOf="@id/edt_serial_number" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tinp_pilih_attb_limbah"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                app:hintAnimationEnabled="true"
                app:layout_constraintEnd_toEndOf="@id/edt_serial_number"
                app:layout_constraintStart_toStartOf="@id/lbl_serial_number"
                app:layout_constraintTop_toBottomOf="@id/lbl_attb_limbah">

                <AutoCompleteTextView
                    android:id="@+id/dropdown_pilih_attb_limbah"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/txt_input_layout"
                    android:fontFamily="@font/montserrat"
                    android:inputType="none"
                    android:text="Pilih ATTB/Limbah" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/lbl_status_anggaran"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status Anggaran"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/montserrat_reguler"
                android:textColor="#3F3D56"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@id/lbl_serial_number"
                app:layout_constraintTop_toBottomOf="@id/tinp_pilih_attb_limbah" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tinp_pilih_status_anggaran"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                app:hintAnimationEnabled="true"
                app:layout_constraintEnd_toEndOf="@id/edt_serial_number"
                app:layout_constraintStart_toStartOf="@id/lbl_serial_number"
                app:layout_constraintTop_toBottomOf="@id/lbl_status_anggaran">

                <AutoCompleteTextView
                    android:id="@+id/dropdown_status_anggaran"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/txt_input_layout"
                    android:fontFamily="@font/montserrat"
                    android:inputType="none"
                    android:text="Pilih Status Anggaran" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/lbl_no_asset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No. Asset"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/montserrat_reguler"
                android:textColor="#3F3D56"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@id/lbl_serial_number"
                app:layout_constraintTop_toBottomOf="@id/tinp_pilih_status_anggaran" />

            <EditText
                android:id="@+id/edt_no_asset"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="25dp"
                android:background="@drawable/txt_input_layout"
                android:fontFamily="@font/montserrat_reguler"
                android:hint="Masukan No Asset"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/tinp_pilih_status_anggaran"
                app:layout_constraintTop_toBottomOf="@id/lbl_no_asset" />

            <TextView
                android:id="@+id/lbl_pabrikan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pabrikan"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/montserrat_reguler"
                android:textColor="#3F3D56"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@id/lbl_serial_number"
                app:layout_constraintTop_toBottomOf="@id/edt_no_asset" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tinp_pilih_pabrikan"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                app:hintAnimationEnabled="true"
                app:layout_constraintEnd_toEndOf="@id/edt_serial_number"
                app:layout_constraintStart_toStartOf="@id/lbl_serial_number"
                app:layout_constraintTop_toBottomOf="@id/lbl_pabrikan">

                <AutoCompleteTextView
                    android:id="@+id/dropdown_pabrikan"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/txt_input_layout"
                    android:fontFamily="@font/montserrat"
                    android:inputType="none"
                    android:text="Pilih Pabrikan" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/lbl_tahun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tahun"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/montserrat_reguler"
                android:textColor="#3F3D56"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@id/lbl_serial_number"
                app:layout_constraintTop_toBottomOf="@id/tinp_pilih_pabrikan" />

            <EditText
                android:id="@+id/edt_tahun"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="25dp"
                android:background="@drawable/txt_input_layout"
                android:fontFamily="@font/montserrat_reguler"
                android:hint="Masukan Tahun"
                android:inputType="number"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/tinp_pilih_status_anggaran"
                app:layout_constraintTop_toBottomOf="@id/lbl_tahun" />

            <TextView
                android:id="@+id/lbl_id_pelanggan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID Pelanggan"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/montserrat_reguler"
                android:textColor="#3F3D56"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@id/lbl_serial_number"
                app:layout_constraintTop_toBottomOf="@id/edt_tahun" />

            <EditText
                android:id="@+id/edt_id_pelanggan"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="25dp"
                android:background="@drawable/txt_input_layout"
                android:fontFamily="@font/montserrat_reguler"
                android:hint="Masukan Id Pelanggan"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/tinp_pilih_status_anggaran"
                app:layout_constraintTop_toBottomOf="@id/lbl_id_pelanggan" />

            <TextView
                android:id="@+id/lbl_klasifikasi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Klasifikasi"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/montserrat_reguler"
                android:textColor="#3F3D56"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@id/lbl_serial_number"
                app:layout_constraintTop_toBottomOf="@id/edt_id_pelanggan" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tinp_pilih_klasifikasi"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                app:hintAnimationEnabled="true"
                app:layout_constraintEnd_toEndOf="@id/edt_serial_number"
                app:layout_constraintStart_toStartOf="@id/lbl_serial_number"
                app:layout_constraintTop_toBottomOf="@id/lbl_klasifikasi">

                <AutoCompleteTextView
                    android:id="@+id/dropdown_klasifikasi"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/txt_input_layout"
                    android:fontFamily="@font/montserrat"
                    android:inputType="none"
                    android:text="Pilih Klasifikasi" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/lbl_no_polis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nomor Polis"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/montserrat_reguler"
                android:textColor="#3F3D56"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@id/lbl_serial_number"
                app:layout_constraintTop_toBottomOf="@id/tinp_pilih_klasifikasi" />

            <EditText
                android:id="@+id/edt_no_polis"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="25dp"
                android:background="@drawable/txt_input_layout"
                android:fontFamily="@font/montserrat_reguler"
                android:hint="Hanya Diisi Ketika Claim Asuransi"
                android:enabled="false"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/lbl_serial_number"
                app:layout_constraintTop_toBottomOf="@id/lbl_no_polis" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_simpan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/br_btn"
                android:elevation="8dp"
                android:fontFamily="@font/montserrat_reguler"
                android:text="Selesai"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/edt_no_polis"
                app:layout_constraintStart_toStartOf="@id/edt_no_polis"
                app:layout_constraintTop_toBottomOf="@id/edt_no_polis" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>